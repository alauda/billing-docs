          {
            "name": "start",
            "in": "query",
            "description": "Start time, example: 2025-06-01",
            "required": true,
            "type": "string"
          },
          {
            "name": "end",
            "in": "query",
            "description": "End time, example: 2025-06-30",
            "required": true,
            "type": "string"
          },
          {
            "name": "step",
            "in": "query",
            "description": "Statistical step, support: day|week|month, default is month",
            "required": false,
            "type": "string"
          },
          {
            "name": "kind",
            "in": "query",
            "description": "Statistical kind, support: project|namespace|cluster|project_all|namespace_all|cluster_all, default is project_all",
            "required": false,
            "type": "string"
          },
          {
            "name": "name",
            "in": "query",
            "description": "Statistical name, relative to Statistical kind",
            "required": false,
            "type": "string"
          },
          {
            "name": "item",
            "in": "query",
            "description": "Whether to distinguish between billing items, default is false",
            "required": false,
            "type": "boolean",
            "default": false
          },
          {
            "name": "currentPage",
            "in": "query",
            "description": "Current page, default is 1",
            "required": false,
            "type": "integer"
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "Page size, default is 20",
            "required": false,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with list of metering and billing cost total",
            "schema": {
              "$ref": "#/definitions/CostTotalResponse"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/Status"
            }
          },
          "503": {
            "description": "Service unavailable",
            "schema": {
